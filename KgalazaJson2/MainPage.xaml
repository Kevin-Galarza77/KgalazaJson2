<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KgalazaJson2.Models"
             x:Class="KgalazaJson2.MainPage"
             BackgroundColor="White">
 
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Listado de Reservas" TextColor="Black" FontAttributes="Bold"
                   HorizontalOptions="Center" FontSize="25" Margin="10"></Label>

            <!-- ENCABEZADO TIPO TABLA -->
            <Grid ColumnSpacing="1" RowSpacing="1" BackgroundColor="Black" Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Nombre" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Bold" Grid.Column="0"/>
                <Label Text="Apellido" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Bold" Grid.Column="1"/>
                <Label Text="Email" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Bold" Grid.Column="2"/>
                <Label Text="Descripción" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Bold" Grid.Column="3"/>
                <Label Text="Estado" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Bold" Grid.Column="4"/>
            </Grid>

            <!-- DATOS TIPO TABLA -->
            <CollectionView x:Name="listView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnSpacing="1" RowSpacing="1" BackgroundColor="Black" Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding name}" BackgroundColor="White" TextColor="Black" Grid.Column="0"/>
                            <Label Text="{Binding lastName}" BackgroundColor="White" TextColor="Black" Grid.Column="1"/>
                            <Label Text="{Binding email}" BackgroundColor="White" TextColor="Black" Grid.Column="2"/>
                            <Label Text="{Binding description}" BackgroundColor="White" TextColor="Black" Grid.Column="3"/>
                            <Label Text="{Binding status}" BackgroundColor="White" TextColor="Black" Grid.Column="4"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
